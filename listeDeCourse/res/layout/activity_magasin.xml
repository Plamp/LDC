<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutPrincipale"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/Magasin"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ListView
        android:id="@+id/listViewRayons"
        android:layout_width="fill_parent"
        android:layout_height="150dp" 
        android:choiceMode="multipleChoice"
        >
            <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />
        
    </ListView>


    <LinearLayout
        android:id="@+id/rayon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nomRayon"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/editTextNomRayon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textAutoComplete" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutBoutons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_horizontal" >

        <Button
            android:id="@+id/buttonAjouterRayon"
                        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ajouter" />

        <Button
            android:id="@+id/buttonModifierRayon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modifier" />

        <Button
            android:id="@+id/buttonSupprimerRayon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/supprimer" />

    </LinearLayout>

    <EditText
        android:id="@+id/editIdRayon"
        style="@style/AppBaseTheme"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

</LinearLayout>
